<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/id_image_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="249dp">

                <ImageView
                    android:id="@+id/id_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/no_image"
                    android:background="@android:color/background_light"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/id_image_layout"
                android:paddingTop="15dp"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="249dp">

                <RelativeLayout
                    android:id="@+id/id_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/id_title"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title: No Info"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_subtitle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_title_layout">

                    <TextView
                        android:id="@+id/id_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtitle: No subtitle"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_subtitle_layout">

                    <TextView
                        android:id="@+id/id_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: NO INFO"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_authors_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_desc_layout"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/id_authors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Authors: Unknown"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_publisher_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_authors_layout">

                    <TextView
                        android:id="@+id/id_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publisher: Unknown"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pages_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_publisher_layout">

                    <TextView
                        android:id="@+id/id_pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Pages: ???"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_year_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pages_layout">

                    <TextView
                        android:id="@+id/id_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year: Unknown"
                        android:textColor="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_year_layout">

                    <TextView
                        android:id="@+id/id_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Rating: Not rated"
                        android:textColor="#000" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>